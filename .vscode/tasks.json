{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/COM_cpu01/CPU1_FLASH_DEBUG/",
    },
    "tasks": [
        {
            "label": "Compile all",
            "type": "shell",
            "command": "C:/MinGW/bin/mingw32-make",
            "args": [
                "all"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "C:/MinGW/bin/mingw32-make",
            "args": [
                "clean"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}